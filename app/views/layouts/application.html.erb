<!DOCTYPE html>
<html lang="en">

  <head>
      <meta charset="utf-8" />
      <title>HSC Marking</title>
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
      <meta content="Coderthemes" name="author" />

      <!-- Standard header content from Rails -->
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
      <%= javascript_importmap_tags %>

      <!-- App favicon -->
      <link rel="shortcut icon" href="/assets/favicon.ico">

      <!-- Theme Config Js -->
      <script src="/assets/hyper-config.js"></script>

      <!-- App css -->
      <link href="/assets/app-saas.min.css" rel="stylesheet" type="text/css" id="app-style" />

      <!-- Icons css -->
      <link href="/assets/icons.min.css" rel="stylesheet" type="text/css" />
  </head>

  <body>
    <!-- Begin page -->
    <div class="wrapper">


        <!-- ========== Topbar Start ========== -->
        <div class="navbar-custom">
            <div class="topbar container-fluid">
                <div class="d-flex align-items-center gap-lg-2 gap-1">

                    <!-- Topbar Brand Logo -->
                    <div class="logo-topbar">
                        <!-- Logo light -->
                        <%= link_to essays_path, class: "logo-light" do %>
                            <span class="logo-lg">
                                <img src="/assets/logo.png" alt="logo">
                            </span>
                            <span class="logo-sm">
                                <img src="/assets/logo-sm.png" alt="small logo">
                            </span>
                        <% end %>

                        <!-- Logo Dark -->
                        <%= link_to essays_path, class: "logo-dark" do %>
                            <span class="logo-lg">
                                <img src="/assets/logo-dark.png" alt="dark logo">
                            </span>
                            <span class="logo-sm">
                                <img src="/assets/logo-dark-sm.png" alt="small logo">
                            </span>
                        <% end %>
                    </div>

                    <!-- Sidebar Menu Toggle Button -->
                    <button class="button-toggle-menu">
                        <i class="mdi mdi-menu"></i>
                    </button>

                    <!-- Horizontal Menu Toggle Button -->
                    <button class="navbar-toggle" data-bs-toggle="collapse" data-bs-target="#topnav-menu-content">
                        <div class="lines">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </button>
                </div>

                <ul class="topbar-menu d-flex align-items-center gap-3">

                    <li class="dropdown">
                        <a class="nav-link dropdown-toggle arrow-none nav-user px-2" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <span class="account-user-avatar">
                                <img src="/assets/users/avatar-1.jpg" alt="user-image" width="32" class="rounded-circle">
                            </span>
                            <span class="d-lg-flex flex-column gap-1 d-none">
                                <h5 class="my-0"><%= current_student.first_name %> <%= current_student.last_name[0] %></h5>
                                <h6 class="my-0 fw-normal">Student</h6>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated profile-dropdown">
                            <!-- item-->
                            <div class=" dropdown-header noti-title">
                                <h6 class="text-overflow m-0">Welcome !</h6>
                            </div>

                            <!-- item-->
                            <a href="javascript:void(0);" class="dropdown-item">
                                <i class="mdi mdi-account-circle me-1"></i>
                                <span>My Account</span>
                            </a>

                            <!-- item-->
                            <a href="javascript:void(0);" class="dropdown-item">
                                <i class="mdi mdi-account-edit me-1"></i>
                                <span>Settings</span>
                            </a>

                            <!-- item-->
                            <a href="javascript:void(0);" class="dropdown-item">
                                <i class="mdi mdi-lifebuoy me-1"></i>
                                <span>Support</span>
                            </a>

                            <!-- item-->
                            <a href="javascript:void(0);" class="dropdown-item">
                                <i class="mdi mdi-lock-outline me-1"></i>
                                <span>Lock Screen</span>
                            </a>

                            <!-- item-->
                            <a href="javascript:void(0);" class="dropdown-item">
                                <i class="mdi mdi-logout me-1"></i>
                                <span>Logout</span>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <!-- ========== Topbar End ========== -->

        <!-- ========== Left Sidebar Start ========== -->
        <div class="leftside-menu">

            <!-- Brand Logo Light -->
            <%= link_to essays_path, class: "logo logo-light" do %>
                <span class="logo-lg">
                    <img src="/assets/logo.png" alt="logo">
                </span>
                <span class="logo-sm">
                    <img src="/assets/logo-sm.png" alt="small logo">
                </span>
            <% end %>

            <!-- Brand Logo Dark -->
            <%= link_to essays_path, class: "logo logo-dark" do %>
                <span class="logo-lg">
                    <img src="/assets/logo-dark.png" alt="dark logo">
                </span>
                <span class="logo-sm">
                    <img src="/assets/logo-dark-sm.png" alt="small logo">
                </span>
            <% end %>

            <!-- Sidebar Hover Menu Toggle Button -->
            <div class="button-sm-hover" data-bs-toggle="tooltip" data-bs-placement="right" title="Show Full Sidebar">
                <i class="ri-checkbox-blank-circle-line align-middle"></i>
            </div>

            <!-- Full Sidebar Menu Close Button -->
            <div class="button-close-fullsidebar">
                <i class="ri-close-fill align-middle"></i>
            </div>

            <!-- Sidebar -left -->
            <div class="h-100" id="leftside-menu-container" data-simplebar>
                <!-- Leftbar User -->
                <div class="leftbar-user">
                    <a href="pages-profile.html">
                        <img src="/assets/users/avatar-1.jpg" alt="user-image" height="42" class="rounded-circle shadow-sm">
                        <span class="leftbar-user-name mt-2">Dominic Keller</span>
                    </a>
                </div>

                <!--- Sidemenu -->
                <ul class="side-nav">

                    <li class="side-nav-title">Navigation</li>

                    <li class="side-nav-item">
                        <%= link_to new_essay_path, class: "side-nav-link" do %>
                            <i class="uil-upload"></i>
                            <span> Upload a new essay </span>
                        <% end %>
                    </li>
                    <li class="side-nav-item">
                        <%= link_to essays_path, class: "side-nav-link" do %>
                            <i class="uil-copy"></i>
                            <span> Your essays </span>
                        <% end %>
                    </li>
                    <li class="side-nav-item">
                        <%= link_to essays_path, class: "side-nav-link" do %>
                            <i class="uil-bill"></i>
                            <span> Payments </span>
                        <% end %>
                    </li>
                    <li class="side-nav-item">
                        <%= link_to essays_path, class: "side-nav-link" do %>
                            <i class="uil-envelope"></i>
                            <span class="badge bg-success float-end">2</span>
                            <span> Messages </span>
                        <% end %>
                    </li>
                    <li class="side-nav-item">
                        <%= link_to essays_path, class: "side-nav-link" do %>
                            <i class="uil-question-circle"></i>
                            <span> Support </span>
                        <% end %>
                    </li>

                    <!-- Help Box -->
                    <div class="help-box text-white text-center">
                        <a href="javascript: void(0);" class="float-end close-btn text-white">
                            <i class="mdi mdi-close"></i>
                        </a>
                        <img src="/assets/svg/help-icon.svg" height="90" alt="Helper Icon Image" />
                        <h5 class="mt-3">Special Announcement</h5>
                        <p class="mb-3">Something cool goes here!</p>
                        <a href="javascript: void(0);" class="btn btn-secondary btn-sm">Learn more</a>
                    </div>
                    <!-- end Help Box -->


                </ul>
                <!--- End Sidemenu -->

                <div class="clearfix"></div>
            </div>
        </div>
        <!-- ========== Left Sidebar End ========== -->

        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content-page">
            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid pt-3">

                    <!-- start page title -->
                    <%= yield %>

                </div>
                <!-- container -->

            </div>
            <!-- content -->

            <!-- Footer Start -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <p>HSCmarking.com.au</p>
                        </div>
                        <div class="col-md-6">
                            <div class="text-md-end footer-links d-none d-md-block">
                                <a href="javascript: void(0);">About</a>
                                <a href="javascript: void(0);">Write a review</a>
                                <%= link_to "Logout", destroy_student_session_path, data: { turbo_method: :delete } %>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- end Footer -->

        </div>

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->

    </div>
    <!-- END wrapper -->

    <!-- Vendor js -->
    <script src="/assets/vendor.min.js"></script>

    <!-- App js -->
    <script src="/assets/app.min.js"></script>

  </body>
</html>
