<div class="card">
  <!-- Logo-->
  <div class="card-header py-4 text-center bg-primary">
    <%= link_to root_path do %>
      <span><img src="../assets/logo.png" alt="logo" height="22"></span>
    <% end %>
  </div>

  <div class="card-body p-4">
    <div class="text-center w-75 m-auto">
      <h4 class="text-dark-50 text-center mt-0 fw-bold">Login</h4>
      <p class="text-muted mb-4">Enter your details below to access your account</p>
    </div>


    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div> <!-- end card-body -->
</div>
<!-- end card -->

<div class="row mt-3">
  <div class="col-12 text-center">
    <p class="text-muted">Need to create an account? <%= link_to "Sign up", new_student_registration_path, class: "bold" %></p>
  </div> <!-- end col-->
</div>
